<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/mybackground"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:id="@+id/name"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/name"
        android:hint="Enter your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/addr"
        android:layout_margin="5dp"
        android:hint="Enter your address"
        android:drawableLeft="@drawable/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/ph"
        android:layout_margin="5dp"
        android:hint="Enter your phone number"
android:drawableLeft="@drawable/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/eid"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/email"
        android:hint="Enter your email id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/uname"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/regusername"
        android:hint="Enter your username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/pass"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/password"
        android:hint="Enter your password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/cpass"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/password"
        android:hint="confirm your password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton android:text="REGISTER"
        android:layout_margin="5dp"
        android:id="@+id/reg"
        android:background="@drawable/buttonstyle"
        android:textColor="#D8E5E6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backtologin"
        android:layout_margin="5dp"
        android:text="Back To Login"
        android:background="@drawable/buttonstyle"
        android:textColor="#EFF5F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
